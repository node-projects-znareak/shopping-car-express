extends layout.pug 

block hero
   section.hero.is-dark.is-bold
      .hero-body
         .container 
            h1.title Octolion Shop
            h2.subtitle Find your articles

block content
   .container(style="flex:1; padding: 30px 0; width: 90%;")
      .columns.is-multiline 
         each product in products 
            .column.is-one-quarter
               .card
                  .card-image
                     figure.image(style="height: 190px;")
                        img(src=product.image style="object-fit:cover; max-height: 100%; width:100%;")
                  .card-content
                     h2.has-text-weight-bold.is-capitalized= product.name
                     span(style="display:block;").mb-3= `${product.price} USD`
                     .button.is-fullwidth.is-primary 
                        span.icon 
                           i.fa.fa-shopping-cart
                           span Agregar al carrito